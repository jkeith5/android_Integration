<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SplashActivity">

<TextView
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:text="Video Service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/splashText"
        android:textSize="30sp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/splashLogoPic" app:layout_constraintVertical_bias="0.095"/>
<ImageView
        android:layout_width="181dp"
        android:layout_height="207dp" app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/splashLogoPic" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>